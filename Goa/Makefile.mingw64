CC = gcc
CFLAGS = -Wall -O2 -fno-strict-aliasing -fomit-frame-pointer
CPPFLAGS = -DGAMESPY
LDFLAGS = -shared -Wl,--enable-auto-image-base -Wl,--no-undefined
LDLIBS = -lws2_32

GAMESPY = CEngine/darray.o \
	CEngine/gserver.o \
	CEngine/gserverlist.o \
	CEngine/gutil.o \
	CEngine/hashtable.o \
	nonport.o

.PHONY: all test clean
#

OBJECTS =  $(GAMESPY)

all: gamespy.dll

gamespy.dll:	$(OBJECTS) gamespy.def
	$(CC) -o gamespy.dll $(LDFLAGS) $(OBJECTS) gamespy.def $(LDLIBS)

clean:
	rm -f *.o
	rm -f CEngine/*.o
	rm -f Sdk/*.o

%.o : %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

